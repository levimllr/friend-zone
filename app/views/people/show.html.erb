<% provide(:title, @person.first_name) %>
<div class="row">
    <aside class="col-md-4">
        <section class="person_info">
            <h1>
                <%= gravatar_for @person %>
                <%= @person.username %>
                <br>
                <% if current_person.befriending?(@person) %>
                    <%= current_person.active_relationships.find_by(befriended_id: @person.id).stringify_short %>
                <% end %>
            </h1>
        </section>
        <section class="stats">
            <%= render 'shared/stats' %>
        </section>
    </aside>
    <div class="col-md-8">
        <%= render 'befriend_form' if logged_in? %>
        <% if @person.microposts.any? %>
            <h3>Microposts (<%= @person.microposts.count %>)</h3>
            <ol class="microposts">
                <%= render @microposts %>
            </ol>
            <%= will_paginate @microposts %>
        <% end %>
    </div>
</div>