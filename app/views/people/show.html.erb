<% provide(:title, @person.first_name) %>
<div class="row">
    <aside class="col-md-4">
        <section class="person_info">
            <h1>
                <%= gravatar_for @person %>
                <%= @person.username %>
            </h1>
        </section>
    </aside>
    <div class="col-md-8">
        <% if @person.microposts.any? %>
            <h3>Microposts (<%= @person.microposts.count %>)</h3>
            <ol class="microposts">
                <%= render @microposts %>
            </ol>
            <%= will_paginate @microposts %>
        <% end %>
    </div>
</div>